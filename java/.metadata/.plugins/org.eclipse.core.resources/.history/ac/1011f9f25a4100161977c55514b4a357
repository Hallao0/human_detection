		BufferedImage img = ImageIO.read(f);
		
		JFrame frame = new JFrame();
		JPanel panel = new JPanel();
		frame.add(panel);
		frame.pack();
		Graphics gr = panel.getGraphics();
		panel.getGraphics().drawImage(img, 0, 0, null);
		pane
